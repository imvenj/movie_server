---
chdir: /path/to/server
environment: production
address: 0.0.0.0
port: 4567
timeout: 30
log: log/thin.log
pid: tmp/pids/thin.pid
max_conns: 1024
max_persistent_conns: 100
require: []
wait: 30
servers: 1
daemonize: true
threaded: true
# Uncomment these lines if you use ssl.
# ssl: true
# ssl_key_file: /path/to/ssl/key
# ssl_cert_file: /path/to/ssl/cert
# ssl_disable_verify: true